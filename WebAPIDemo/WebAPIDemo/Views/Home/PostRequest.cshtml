
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PostRequest</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
    $(function () {

        $("#btn1").click(function () {
            $.post("/api/Score/GetScoreById", {"":3000},
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn2").click(function () {
            $.post("/api/Score/GetScoreByIdAndName", {id:10010,name:"刘湘智"},
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn3").click(function () {
            $.ajax({
                type: "post",
                url: "/api/Score/GetScoreByDynamic",
                contentType: 'application/json',
                data: JSON.stringify({ id: 10010, name: "刘湘智" }),//标准化
                success: function (data, status) {
                    alert(data);
                }        
            });
        });

        $("#btn4").click(function () {
            $.post("/api/Score/QueryStudent", { StudentID: 10010, StudentName: "刘湘智", Telephone:"13889899898"},
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn6").click(function () {
            var data = {
                "Teacher": "刘老师",
                "Course": {
                    Id: 1234,
                    CourseName: "WebApi",
                    Price:3998
                }
            }
            $.ajax({
                type: "post",
                url: "/api/Score/MultiParam",
                contentType: 'application/json',
                data: JSON.stringify(data),//标准化
                success: function (data, status) {
                    alert(data);
                }
            });
        });

        $("#btn7").click(function () {
            var score = ["60","70","80"];
            $.ajax({
                type: "post",
                url: "/api/Score/ArrayParam",
                contentType: 'application/json',
                data: JSON.stringify(score),//标准化
                success: function (data, status) {
                    alert(data);
                }
            });
        });

        $("#btn8").click(function () {
            var stuList = [
                { StudentId : 1001, StudentName : "Killy", Telephone : "15897396539" },
                { StudentId:1002, StudentName:"Tom", Telephone:"15897396549" },
                { StudentId:1003, StudentName:"cindy", Telephone:"15897396559" }
                                ];
            $.ajax({
                type: "post",
                url: "/api/Score/ListParam",
                contentType: 'application/json',
                data: JSON.stringify(stuList),//标准化
                success: function (data, status) {
                    alert(data);
                }
            });
        });

    });
    </script>
</head>
<body>
    <div>
        <input type="button" id="btn1" value="Post：一个参数的请求" /><br /><br />
        <input type="button" id="btn2" value="Post：2个参数的请求" /><br /><br />
        <input type="button" id="btn3" value="Post：通过Dynamic实现多个个参数的请求" /><br /><br />
        <input type="button" id="btn4" value="Post：基于JSON传递实体实现多个个参数的请求" /><br /><br />

        <input type="button" id="btn6" value="Post：传递基础类型参数加实体参数" /><br /><br />
        <input type="button" id="btn7" value="Post：数组参数类型" /><br /><br />
        <input type="button" id="btn8" value="Post：对象集合作为参数" /><br /><br />
    </div>
</body>
</html>
