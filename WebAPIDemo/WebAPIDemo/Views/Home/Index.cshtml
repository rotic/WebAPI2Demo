<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {

        $("#btn1").click(function () {
            $.get("/Course/QueryCourse", { courseid: 7000 },
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn2").click(function () {
            $.post("/Course/UpdateCourse", null,
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn3").click(function () {
            $.post("/Course/DeleteCourse", { "": 2200 },
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn4").click(function () {
            $.post("/Course/AddCourse", { Id:2200,CourseName:"WebAPI2",Price:2088 },
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn5").click(function () {
            $.get("/api/Teacher", null,
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn6").click(function () {
            $.post("/api/Teacher/QueryTeacherById", { "":1238 },
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn7").click(function () {
            $.get("/api/Teacher/GetCount", { age:40 },
                function (data, status) {
                    alert(data);
                });
        });

        $("#btn8").click(function () {
            $.post("/api/Teacher/GetTeacherName", { "": 1111 },
                function (data, status) {
                    alert(data);
                });
        });

    });
</script>

